<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilekelompok.FauzanDetailActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btn_back_from_fauzan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="Profile"
                android:textSize="16sp"
                android:textColor="@color/neutral_dark"
                android:fontFamily="@font/poppins_semibold"
                />
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/line_full"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/fauzan"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <TextView
                    android:id="@+id/tv_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Fauzan Nurramadhan"
                    android:maxLines="2"
                    android:textSize="14sp"
                    android:textColor="@color/neutral_dark"
                    android:fontFamily="@font/poppins_bold"/>

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21120120140081"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:textColor="@color/neutral_dark"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/ic_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_gender" />

            <TextView
                android:id="@+id/title_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/ic_gender"
                android:fontFamily="@font/poppins_bold"
                android:text="Gender"
                android:textColor="@color/neutral_dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Male"
                android:textColor="@color/neutral_grey"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/ic_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_gender"
                android:layout_marginTop="28dp"
                android:src="@drawable/ic_calendar" />

            <TextView

                android:id="@+id/title_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_gender"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/ic_birthday"
                android:fontFamily="@font/poppins_bold"
                android:text="Birthday"
                android:textColor="@color/neutral_dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_gender"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_regular"
                android:text="29 November 2000"
                android:textColor="@color/neutral_grey"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/ic_email_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_birthday"
                android:layout_marginTop="28dp"
                android:src="@drawable/ic_email_profile" />

            <TextView
                android:id="@+id/title_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_birthday"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/ic_email_profile"
                android:fontFamily="@font/poppins_bold"
                android:text="Email"
                android:textColor="@color/neutral_dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_email_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_birthday"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_regular"
                android:text="nurramadhanfauzan@gmail.com"
                android:textColor="@color/neutral_grey"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/ic_instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_email_profile"
                android:layout_marginTop="28dp"
                android:src="@drawable/ic_instagram" />

            <TextView
                android:id="@+id/title_instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_email_profile"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/ic_email_profile"
                android:fontFamily="@font/poppins_bold"
                android:text="Instagram"
                android:textColor="@color/neutral_dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_email_profile"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_regular"
                android:text="nahdamarrun"
                android:textColor="@color/neutral_grey"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/ic_phone_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_instagram"
                android:layout_marginTop="28dp"
                android:src="@drawable/ic_phone_profile" />

            <TextView
                android:id="@+id/title_phone_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_instagram"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/ic_phone_profile"
                android:fontFamily="@font/poppins_bold"
                android:text="Phone Number"
                android:textColor="@color/neutral_dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_phone_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_instagram"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_regular"
                android:text="083863613171"
                android:textColor="@color/neutral_grey"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/ic_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_phone_profile"
                android:layout_marginTop="28dp"
                android:src="@drawable/ic_address" />

            <TextView
                android:id="@+id/title_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_phone_profile"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/ic_phone_profile"
                android:fontFamily="@font/poppins_bold"
                android:text="Address"
                android:textColor="@color/neutral_dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_address_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_phone_profile"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Bogor, West Java"
                android:textColor="@color/neutral_grey"
                android:textSize="12sp" />



        </RelativeLayout>



    </LinearLayout>


</RelativeLayout>