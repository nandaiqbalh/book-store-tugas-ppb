<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_color"
    tools:context=".activity.book.DetailBookActivity"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll_view_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_checkout_detail"
            android:layout_marginBottom="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_gambar_buku_detail"
                        android:layout_width="match_parent"
                        android:layout_height="310dp"
                        android:src="@drawable/buku_kolase"
                        android:background="@color/white"
                        />

                    <TextView
                        android:id="@+id/tv_diskon_buku_detail"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/rounded_corner"
                        android:fontFamily="@font/poppins_bold"
                        android:paddingTop="18dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:text="20.0%"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/tv_judul_buku_detail"
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="Judul Buku"
                        android:textColor="@color/neutral_dark"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/btn_add_to_cart_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@id/tv_judul_buku_detail"
                        android:src="@drawable/ic_cart" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp">
                    <TextView
                        android:id="@+id/tv_harga_buku_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rpxxxx"
                        android:textColor="@color/primary_blue"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_harga_awal_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Rpxxxx"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/neutral_grey"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail"
                    android:textColor="@color/neutral_dark"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="14sp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Book Author"
                        android:textColor="@color/neutral_dark"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                        android:id="@+id/tv_book_author_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Book Author"
                        android:textColor="@color/neutral_grey"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Product Code"
                        android:textColor="@color/neutral_dark"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                        android:id="@+id/tv_book_code_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="XX-01"
                        android:textColor="@color/neutral_grey"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Book Quantity"
                        android:textColor="@color/neutral_dark"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                        android:id="@+id/tv_book_quantity_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="200"
                        android:textColor="@color/neutral_grey"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Book Page"
                        android:textColor="@color/neutral_dark"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                        android:id="@+id/tv_book_page_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="144"
                        android:textColor="@color/neutral_grey"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Book Language"
                        android:textColor="@color/neutral_dark"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                        android:id="@+id/tv_book_language_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Book Language"
                        android:textColor="@color/neutral_grey"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"/>


                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btn_checkout_detail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_btn_primary"
            android:fontFamily="@font/poppins_bold"
            android:text="Checkout"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>