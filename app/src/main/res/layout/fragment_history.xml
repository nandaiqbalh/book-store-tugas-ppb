<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ProfileFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"
        android:text="Checkout"
        android:textColor="@color/font_nama"
        android:textSize="20dp"
        />

    <ImageView
        android:id="@+id/line_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line_full"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/title_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Your transactions"
        android:textColor="@color/font_nama"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_history_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            />
</LinearLayout>